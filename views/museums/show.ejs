<%- layout('layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<link rel="stylesheet" href="/stylesheets/show.css">

<div class="row mb-3">
    <div class="col-md-6 order-2 mt-3 mt-md-0">
        <div id="map"></div>
    </div>
    <div class="col-md-6 order-1">
        <div id="carouselControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% museum.images.forEach((img,i)=>{%>
                <div class="carousel-item <%= i===0? 'active' : '' %>">
                    <img src="<%= img.url %>" class="d-block w-100" alt="..." >
                </div>
                <%}) %>
            </div>
            <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
        <div class="card order-3">
            <div class="card-body">
                <h5 class="card-title"><%= museum.title %></h5>
                <p class="card-text"><%= museum.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= museum.location %> </li>
                <li class="list-group-item ">Submitted by: <%= museum.author.username %> </li>
                <li class="list-group-item">&#x20B9;<%= museum.ticket %>/person </li>
            </ul>
            <% if(currentUser && museum.author.equals(currentUser._id)){ %>
            <div class="card-body links">
                <a href="/museums/<%= museum._id %>/edit" style="color: white;"
                    class="card-link btn btn-info d-inline">Edit</a>
                <form action="/museums/<%= museum.id %>/?_method=DELETE" method="post" class="d-inline">
                    <button class="card-link btn btn-danger">Delete</button></form>
                <div class="d-inline">
                    <a href="/museums/<%= museum._id %>/pictures" class="card-link btn btn-primary">Manage
                        Photos</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <div class="col-md-12 mt-5 order-4 card d-block">
        <% if(currentUser){ %>
        <h2 class="mt-3 mb-4">Leave a review</h2>
        <form action="/museums/<%= museum._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
            <div class="mb-3">
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% } %>
    </div>

    <div class="col-md-12 mt-5 order-5">
        <h3 class="mb-4">Reviews</h3>
        <hr>
        <% if(!museum.reviews.length){ %>
        <h5 class="text-center mt-4 mb-2">No Reviews yet.</h5>
        <% if(!currentUser) {%> 
        <h6 class="text-muted text-center mb-5">(Login to leave your own)</h6>
        <% } %> 
        <% }else{ %>
        <% for(let review of museum.reviews){ %>
        <div class="mb-3 comment">
            <div>
                <img class="person"
                    src="https://cdn.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png"
                    alt="">
            </div>
            <div class="comment-box d-inline">
                <h5><%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>">
                    Rated: <%= review.rating %> stars
                </p>
                <p><%= review.body %></p>
                <% if(currentUser && review.author.equals(currentUser._id)){ %>
                <form action="/museums/<%= museum._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <%} %>
             
            </div>
        </div>
        <% } %>
        <% } %>
    </div>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const museum = <%- JSON.stringify(museum) %>;
</script>

<script src="/javascripts/map.js"></script>
<%- layout('layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/pictures.css">

<div class="row mb-3">
    <h2 class="mb-md-5">Manage Pictures</h2>
    <h3 class="mb-4">Add new pictures</h3>
    <form action="/museums/<%= museum._id %>/pictures" method="POST" class="mb-3" enctype="multipart/form-data">
        <div class="mb-4">
            <input class="form-control" type="file" name="image" id="image" multiple>
        </div>
        <label for="pics">
            <h3>Select pictures to delete</h3>
        </label>
        <div class="mb-3" id="pics">
            <% museum.images.forEach(function (img,i) { %>
            <div class="form-check-inline manage">
                <label for="image-<%= i %>"><img src="<%=img.url%>" alt="" class="img-thumbnail mr-2"></label>
                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
            </div>
            <% }) %>
        </div>
        <div class="text-center mt-4">
            <button class="btn btn-success">Update</button>
        </div>
    </form>
</div>
    ,'Prince of Wales Museum, Mumbai'] ]%>

    <%let num=Math.floor(Math.random() * arr.length)%>
        <% let imgUrl=arr[num][0]%>
            <% let name=arr[num][1] %>

                <body class="d-flex text-center text-white bg-dark"
                    style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),url(<%=imgUrl%>);">
                    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
                        <header class="mb-auto">
                            <div>
                                <h3 class="float-md-left mb-0">Museum Counsel</h3>
                                <nav class="nav nav-masthead justify-content-center float-md-right">
                                    <a class="nav-link active" id="home" href="#">Home</a>
                                    <a class="nav-link" href="/museums">Museums</a>
                                    <% if(!currentUser){ %>
                                        <a class="nav-link" href="/login">Login</a>
                                        <a class="nav-link" href="/register">Register</a>
                                        <% }else{ %>
                                            <a class="nav-link" href="/logout">Logout</a>
                                            <% } %>
                                </nav>
                            </div>
                        </header>
                        <main>
                            <h1>Museum Counsel</h1>
                            <p class="lead">Welcome to Museum Counsel! <br> Information about all Museums in one place.
